component ConditionalDemo {
  state count = 0
  state isVisible = 1
  
  heading "Conditional Rendering Demo"
  text "Count: {count}"
  
  if count > 5 {
    text "Count is greater than 5!"
  }
  
  if count < 5 {
    text "Count is less than 5"
  } else {
    text "Count is 5 or more"
  }
  
  button "Increment" onClick=increment
  button "Decrement" onClick=decrement
}

function increment() {
  count = count + 1
}

function decrement() {
  count = count - 1
}
